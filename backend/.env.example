# Database Configuration (MongoDB for local, DynamoDB for production)
DB_HOST=localhost
DB_PORT=27017
DB_USERNAME=mongodb
DB_PASSWORD=mongodb
DB_DATABASE=ticket_management_system

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
